<p>{{#link-to 'users'}}Back to all users{{/link-to}}</p>
<h2>Viewing trips for user: {{model.email}}</h2>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Destination</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Comment</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.trips key='id' as |trip|}}
      <tr>
        <td>{{trip.destination}}</td>
        <td>{{#if trip.startDate}}{{moment trip.startDate 'dddd, MMMM Do YYYY'}}{{/if}}</td>
        <td>{{#if trip.endDate}}{{moment trip.endDate 'dddd, MMMM Do YYYY'}}{{/if}}</td>
        <td>{{trip.comment}}</td>
        <td>
          <button class='delete-trip-button btn btn-danger' {{action 'deleteTrip' trip}}>Delete this trip</button>
          {{#link-to 'user_trip' trip class='btn btn-default'}}Edit this trip{{/link-to}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>