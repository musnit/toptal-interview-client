<table class="table table-striped table-condensed user-table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each content key='id' as |user|}}
      <tr>
        <td>{{user.email}}</td>
        <td>{{user.actualRole}}</td>
        <td>
          {{#if userIsAdmin}}
            {{#link-to 'user' user class='delete-trip-button btn btn-default' }}Manage Trips{{/link-to}}
          {{/if}}
          <button class='delete-trip-button btn btn-danger' {{ action 'deleteUser' user }}>Delete this user</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>