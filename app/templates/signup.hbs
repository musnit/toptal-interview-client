<form {{action 'signup' on='submit'}} class='input-form'>
  <div class="form-group">
    <label for="email">Email</label>
    {{input id="email" class="form-control" value=email placeholder='Enter email'}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    {{input id="password" class="form-control" value=password placeholder='Enter Password' type='password'}}
  </div>
  <button class="btn btn-default" id="submit" type="submit">Signup</button>
</form>
{{#if errorMessage}}
  <div class="alert alert-warning alert-dismissible fade in">
    Error: {{errorMessage}}
  </div>
{{/if}}