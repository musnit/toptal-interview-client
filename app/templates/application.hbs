<section id='header'>
  <header>
  {{#if session.isAuthenticated}}
    {{#link-to 'trips'}}
      <h1>trip planner</h1>
    {{/link-to}}
  {{else}}
    {{#link-to 'index'}}
      <h1>trip planner</h1>
    {{/link-to}}
  {{/if}}
  </header>
  <nav id='nav'>
    <ul>
      {{#if session.isAuthenticated}}
        <li>{{#link-to 'trips'}}My Trips{{/link-to}}</li>
        <li>{{#link-to 'new_trip'}}Create New Trip{{/link-to}}</li>
        <li>{{#link-to 'travel_plan'}}Travel Plan{{/link-to}}</li>
      {{else}}
        <li>{{#link-to 'index'}}Welcome{{/link-to}}</li>
      {{/if}}
    </ul>
  </nav>
  <nav id='bottom-nav'>
    <ul>
      <li>
        {{#if session.isAuthenticated}}
          <a href='#' {{ action 'invalidateSession' }}>Logout</a>
        {{else}}
          {{#link-to 'signup'}}Signup{{/link-to}}
          {{#link-to 'login'}}Login{{/link-to}}
        {{/if}}
      </li>
    </ul>
  </nav>
  <footer>
    <ul class='icons'>
      <li>{{fa-icon "envelope"}}<a href='mailto:musnit@gmail.com'><span class='label'> Email us!</span></a></li>
    </ul>
  </footer>
</section>
<section id='wrapper' class="container">
  {{outlet}}
</section>